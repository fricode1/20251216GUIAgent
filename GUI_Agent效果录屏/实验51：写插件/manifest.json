{
  "manifest_version": 3,
  "name": "HelloWorld Sidebar",
  "version": "1.0.0",
  "description": "A simple Chrome extension with echo chat functionality in the sidebar",
  "permissions": [
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open Sidebar"
  }
}
